# Slack Bot Configuration
# Copy this file to .env and customize the values
# Static configurations (ports, URLs, etc.) are set in docker-compose.yml

# =============================================================================
# SECRETS & TOKENS (Required)
# =============================================================================

# Slack App Configuration - REQUIRED for Slack integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# =============================================================================
# BEHAVIORAL CONFIGURATIONS
# =============================================================================

# API Communication Settings
SRE_AGENT_API_TIMEOUT=30

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_ACTIVE_SESSIONS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300  # seconds

# =============================================================================
# DEVELOPMENT OVERRIDES (Optional)
# =============================================================================

# Logging Level Override (optional)
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=DEBUG

# Custom log format (optional)
# LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Override SRE Agent API URL (for external testing)
# SRE_AGENT_API_URL=http://localhost:8001
